require recipes-kernel/linux/linux-yocto.inc

SRCREV_machine ?= "1dfc94848e05989ab6c5fde2080f35546d81e798"
SRCREV_machine_qemuppc ?= "81334ed6f11da157e13c306c48f3d49a051d9d89"
